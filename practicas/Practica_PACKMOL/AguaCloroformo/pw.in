&CONTROL
calculation = 'md'
  restart_mode = 'from_scratch'
  prefix = 'md_simulation'
  pseudo_dir = '../pseudo/'
  outdir = './out'
  dt = 20                      ! Paso de tiempo en unidades atómicas de Rydberg (~1 fs)
  nstep = 200                  ! Número de pasos (~200 fs en total)
  etot_conv_thr = 1.0d-4,      ! Criterio de convergencia para la energía total
/

&SYSTEM
    ibrav = 1                         ! Tipo de celda
    celldm(1) = 8.0                   ! Parametro de celda
    nat = 79                          ! Número total de átomos 
    ntyp = 4                          ! Número de tipos de átomos (O, H, C, Cl)
    ecutwfc = 30.0                    ! Energía de corte para las funciones de onda
    ecutrho = 120.0                   ! Energía de corte para la densidad electrónica
    occupations = 'smearing',
    smearing = 'mp',
    degauss = 0.02,
/

&ELECTRONS
/

&IONS
  ion_dynamics = 'verlet'            ! Algoritmo de Verlet para BO-MD
  ion_temperature = 'berendsen'      ! Termostato de Nose-Hoover
  tempw = 300.0                      ! Temperatura objetivo en Kelvin
/

